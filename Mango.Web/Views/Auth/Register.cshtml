@model RegistrationRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <div class="col-12">
                <h1>Register</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..."></input>
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Username..."></input>
                <span asp-validation-for="Name" class="text-danger"/>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number..."></input>
                <span asp-validation-for="PhoneNumber" class="text-danger"/>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..."></input>
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
            </div>
        </div>
</form>

@*//para que ande la notificacion toastr*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}